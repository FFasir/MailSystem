# Backend environment example for Aliyun SMS
# Copy to .env and fill with your real values. Do NOT commit secrets.

# FastAPI/DB
DATABASE_URL=sqlite:///./data/app.db
MAIL_DOMAIN=mail.com

# SMS toggle and provider
SMS_ENABLED=true
SMS_PROVIDER=aliyun

# Aliyun SMS credentials
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
ALIYUN_SIGN_NAME=your-sms-sign-name
ALIYUN_TEMPLATE_CODE=your-template-code
ALIYUN_REGION_ID=cn-hangzhou

# SMS behavior
SMS_CODE_TTL_SECONDS=600
SMS_RESEND_INTERVAL_SECONDS=60
SMS_MAX_ATTEMPTS=5

# Optional SMTP/POP3 (defaults are fine for local)
SMTP_HOST=0.0.0.0
SMTP_PORT=2525
POP3_HOST=0.0.0.0
POP3_PORT=8110

# External SMTP (163 example)
SMTP_HOST=smtp.163.com
SMTP_PORT=465
SMTP_USE_SSL=true
SMTP_USE_STARTTLS=false
SMTP_USER=@163.com
SMTP_PASS=your-163-app-password

# External IMAP (163 example)
IMAP_HOST=imap.163.com
IMAP_PORT=993
IMAP_USE_SSL=true
IMAP_USER=@163.com
IMAP_PASS=your-163-app-password

# IMAP 自动同步配置
IMAP_SYNC_ENABLED=true
IMAP_SYNC_TO_USER=shao
IMAP_SYNC_INTERVAL_MINUTES=5
